{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": ".",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*",
                "vendor/*"
            ],
            "src/*": [
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}