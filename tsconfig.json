{
    "compilerOptions": {
        "types": [
            "reflect-metadata",
            "node",
            "express"
        ],
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "./build/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "vendor/*"
            ],
            "src/*": [
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "clients",
        "dockest.ts",
        "build"
    ]
}